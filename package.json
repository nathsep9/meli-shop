{
  "name": "meli-shop",
  "version": "1.0.0",
  "description": "A React-based e-commerce application with server-side rendering and static page generation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run server:dev\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --config webpack.client.js --mode production",
    "build:server": "webpack --config webpack.server.js --mode production",
    "build:watch": "concurrently \"webpack --config webpack.client.js --mode development --watch\" \"webpack --config webpack.server.js --mode development --watch\"",
    "server:dev": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "generate:static": "ts-node scripts/generateStaticPages.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "react",
    "ssr",
    "typescript",
    "sass",
    "static-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.4",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.2",
    "null-loader": "^4.0.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
